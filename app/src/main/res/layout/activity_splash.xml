<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.usi.inf.gabrialex.musicplayer2.MoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please, Select your Mood"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/goodMoodButton"
                android:layout_width="50dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/ic_smile"
               />

            <ImageButton
                android:id="@+id/neutralMoodButton"
                android:layout_width="50dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/ic_unsure" />

            <ImageButton
                android:id="@+id/badMoodButton"
                android:layout_width="50dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/ic_grumpy" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
